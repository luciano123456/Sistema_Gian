<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sistema de Gestion</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SistemaGian.Application.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Estilos", required: false)
</head>
<body>

    <partial name="~/Views/Shared/Partials/NavbarLogin.cshtml" />

  

    <div class="row">
        <!-- Columna del logo -->
        <div class="col-lg-12 divLogo">
            <img src="/Imagenes/logo.png" class="img-fluid imageLogo" alt="Logo">
        </div>
    </div>

   
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)


</body>
</html>
